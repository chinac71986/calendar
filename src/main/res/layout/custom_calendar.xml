<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:id="@+id/caldroid_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/caldroid_leftarrow"
            style="@style/CaldroidDefaultLeftButton"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/caldroid_monthTV"
            style="@style/CaldroidDefaultDarkMonthName"
            />

        <ImageView
            android:id="@+id/caldroid_rightarrow"
            style="@style/CaldroidDefaultRightButton"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/caldroid_week"
        android:layout_below="@+id/caldroid_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="日"
            />
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="一"
            />
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="二"
            />
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="三"
            />
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="四"
            />
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="五"
            />
        <TextView
            style="@style/CaldroidDefaultWeekday"
            android:text="六"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/caldroid_viewpager"
        android:layout_below="@+id/caldroid_week"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        />

</RelativeLayout>
